<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/change_color_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_a_color"
        android:layout_margin="16dp"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_color_title"
        >

        <RadioButton
            android:id="@+id/change_color_red"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/red"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_pink"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/pink"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_purple"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/purple"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_blue"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/blue"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_cyan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/cyan"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_green"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/green"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_yellow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/yellow"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_orange"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/orange"
            android:onClick="onColorChange"
            />

        <RadioButton
            android:id="@+id/change_color_brown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/brown"
            android:onClick="onColorChange"
            />
        <RadioButton
            android:id="@+id/change_color_teal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:backgroundTint="@color/deep_orange"
            android:onClick="onColorChange"
            />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>